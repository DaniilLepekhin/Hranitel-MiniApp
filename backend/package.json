{
  "name": "academy-miniapp-backend",
  "version": "1.0.0",
  "description": "Academy MiniApp 2.0 Backend - Bun + Elysia",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts",
    "webhook:setup": "bun run src/setup-webhook.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "elysia": "^1.4.19",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@elysiajs/cookie": "^0.8.0",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.5",
    "ioredis": "^5.8.2",
    "valibot": "^1.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.0.0",
    "openai": "^4.77.0",
    "grammy": "^1.35.0",
    "nanoid": "^5.0.9",
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@types/bun": "^1.2.1",
    "drizzle-kit": "^0.30.4",
    "typescript": "^5.9.3",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.18.0"
  }
}
